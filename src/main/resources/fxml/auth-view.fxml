      <Label layoutX="20.0" layoutY="143.0" prefHeight="60.0" prefWidth="127.0" text="Password">
         <font>
            <Font size="26.0"/>
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="199.0" layoutY="130.0" onAction="#checkAuth" prefHeight="60.0"
